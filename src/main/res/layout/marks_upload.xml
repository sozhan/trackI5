<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.MarksReport"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ECEFF1"
        >
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/subject_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_multiline="false"
                app:ms_hint="Select Subject"
                app:ms_enableFloatingLabel="true"
                app:ms_enableErrorLabel="true"
                app:ms_floatingLabelText="Subjects"
                app:ms_baseColor="@color/colorAccent"
                app:ms_highlightColor="@color/colorAccent"
                app:ms_errorColor="@color/colorPrimary"
                app:ms_thickness="1dp"
                app:ms_hintColor="@color/colorAccent"
                app:ms_arrowColor="@color/colorAccent"
                app:ms_arrowSize="16dp"
                app:ms_alignLabels="false"
                app:ms_floatingLabelColor="@color/colorAccent"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/class_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_multiline="false"
                app:ms_hint="Select Class"
                app:ms_enableFloatingLabel="true"
                app:ms_enableErrorLabel="true"
                app:ms_floatingLabelText="Class List"
                app:ms_baseColor="@color/colorAccent"
                app:ms_highlightColor="@color/colorAccent"
                app:ms_errorColor="@color/colorPrimary"
                app:ms_thickness="1dp"
                app:ms_hintColor="@color/colorAccent"
                app:ms_arrowColor="@color/colorAccent"
                app:ms_arrowSize="16dp"
                app:ms_alignLabels="false"
                app:ms_floatingLabelColor="@color/colorAccent"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/section_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_hint="Select Section"
                app:ms_enableFloatingLabel="true"
                app:ms_enableErrorLabel="true"
                app:ms_floatingLabelText="Section"
                app:ms_baseColor="@color/colorAccent"
                app:ms_highlightColor="@color/colorAccent"
                app:ms_errorColor="@color/colorPrimary"
                app:ms_thickness="1dp"
                app:ms_hintColor="@color/colorAccent"
                app:ms_arrowColor="@color/colorAccent"
                app:ms_arrowSize="16dp"
                app:ms_alignLabels="false"
                app:ms_floatingLabelColor="@color/colorAccent"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/exam_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_multiline="false"
                app:ms_hint="Select Exam"
                app:ms_enableFloatingLabel="true"
                app:ms_enableErrorLabel="true"
                app:ms_floatingLabelText="Exams"
                app:ms_baseColor="@color/colorAccent"
                app:ms_highlightColor="@color/colorAccent"
                app:ms_errorColor="@color/colorPrimary"
                app:ms_thickness="1dp"
                app:ms_hintColor="@color/colorAccent"
                app:ms_arrowColor="@color/colorAccent"
                app:ms_arrowSize="16dp"
                app:ms_alignLabels="false"
                app:ms_floatingLabelColor="@color/colorAccent"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/grade_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_multiline="false"
                app:ms_hint="Select Grade Type"
                app:ms_enableFloatingLabel="true"
                app:ms_enableErrorLabel="true"
                app:ms_floatingLabelText="Class List"
                app:ms_baseColor="@color/colorAccent"
                app:ms_highlightColor="@color/colorAccent"
                app:ms_errorColor="@color/colorPrimary"
                app:ms_thickness="1dp"
                app:ms_hintColor="@color/colorAccent"
                app:ms_arrowColor="@color/colorAccent"
                app:ms_arrowSize="16dp"
                app:ms_alignLabels="false"
                app:ms_floatingLabelColor="@color/colorAccent"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/marks_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_hint="Total Marks"
                app:ms_enableFloatingLabel="true"
                app:ms_enableErrorLabel="true"
                app:ms_floatingLabelText="Section"
                app:ms_baseColor="@color/colorAccent"
                app:ms_highlightColor="@color/colorAccent"
                app:ms_errorColor="@color/colorPrimary"
                app:ms_thickness="1dp"
                app:ms_hintColor="@color/colorAccent"
                app:ms_arrowColor="@color/colorAccent"
                app:ms_arrowSize="16dp"
                app:ms_alignLabels="false"
                app:ms_floatingLabelColor="@color/colorAccent"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:text="Get Mark List"
            android:id="@+id/exam_view"
            android:layout_below="@id/Section"
            android:layout_margin="@dimen/attendance_vertical_margin"
            android:background="@drawable/button_custom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll No"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/mark_roll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/mark_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--- ---"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.5"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_marginRight="10dp">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_mark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/input_mark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:hint="Mark" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/absent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Absent"
                    android:background="@drawable/button_custom"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">
                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/attendance_vertical_margin" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <Button
                android:id="@+id/previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:layout_weight="1.5"
                android:layout_gravity="start"
                android:text="Previous"
                android:background="@drawable/button_custom"
                android:layout_margin="@dimen/attendance_vertical_margin"/>
            <Button
                android:id="@+id/uploadMarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:text="Upload Marks"
                android:background="@color/material_grey_500"
                android:layout_margin="@dimen/attendance_vertical_margin"/>
            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:layout_weight="1.5"
                android:layout_gravity="start"
                android:text="Next"
                android:background="@drawable/button_custom"
                android:layout_margin="@dimen/attendance_vertical_margin"/>

        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>